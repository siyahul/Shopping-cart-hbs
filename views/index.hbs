<section class="section">
    <div class="container mt-5">
        <div class="row">
            {{#each products}}
            <div class="col-md-3 product">
                <div class="card" style="width: 18rem;">
                    <img src="{{this.image}}" width="100px" height="250px" class="card-img-top image" alt="">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <h6 class="card-title">$<strong>{{this.price}}</strong></h5>
                            <p class="card-text">{{this.description}}</p>
                            <p class="card-text">{{this.catogory}}</p>
                            <a href="#" class="btn btn-primary">Add to cart</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>